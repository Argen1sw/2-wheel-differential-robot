<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">
    </link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0.043"/>
          <geometry>
            <cylinder length="0.08" radius="0.185"/>
          </geometry>
          <material name="black"/>
        </visual>
        <collision>
          <origin rpy="0 0 0" xyz="0 0 0.043"/>
          <geometry>
            <cylinder length="0.08" radius="0.185"/>
          </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3.6" length="0.08" radius="0.185">
            <origin rpy="0 0 0" xyz="0 0 0.043"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin rpy="-${pi/2} 0 0" xyz="0 0.12 0.0336"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.015" radius="0.045"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.015" radius="0.045"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.015" radius="0.045">
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin rpy="${pi/2} 0 0" xyz="0 -0.12 0.0336"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.015" radius="0.045"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.015" radius="0.045"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.015" radius="0.045">
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.14 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0114"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0114"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0114">
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Red</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>